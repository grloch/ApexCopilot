{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "es2022",
		"allowJs": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"lib": ["es6"],
		"typeRoots": ["./node_modules/@types", "./interfaces.d.ts"]
	},
	"include": ["./types/**/*.ts", "src/**/*", "..ignore/inquirer", "interfaces.d.ts"],
	"plugins": [{ "transform": "@salesforce/core/lib/messageTransformer", "import": "messageTransformer" }]

}
